---
interface Props {
  direction?: 'up' | 'down' | 'right' | 'left'
}

const { direction = 'left' } = Astro.props

const config = {
  dir: ''
}

switch (direction) {
  case 'up':
    config.dir = 'rotate-90'
    break

  case 'down':
    config.dir = 'rotate-270'
    break

  case 'right':
    config.dir = 'rotate-180'
    break
}
---

<svg
  xmlns='http://www.w3.org/2000/svg'
  viewBox='0 0 24 24'
  class=`${config.dir}`
>
