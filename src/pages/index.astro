---
export const prerender = true

import Button from '../components/Button.astro'
import Card from '../components/Card.astro'
import Colors from '../enums/colors'
import Layout from '../layouts/Layout.astro'
import SectionContainer from '../components/SectionContainer.astro'
import Jumbotron from '../components/Jumbotron.astro'
import LinkedList from '../components/LinkedList.astro'
import type { Category } from '../models/Category'
import bgSepe1 from '../../public/bg-sepe1.webp'
import bgSepe2 from '../../public/bg-sepe2.webp'

const categories: Category[] = [
  {
    name: 'Category 1'
  },
  {
    name: 'Category 2'
  },
  {
    name: 'Category 3'
  }
]
const items = [
  {
    text: 'El evento constará de 3 fases, en cada una podrás participar para hacer que tu clip-momento llegue a la cima.',
    active: true
  },
  {
    title: 'Categorías y Votaciones',
    text: 'Se presentarán las categorías donde podrás sugerir clips.'
  },
  {
    title: 'Finalistas',
    text: 'Se escogerán los 4 clips más votados y podrás hacer tus votaciones por el finalista.'
  },
  {
    title: 'Premiación',
    text: 'Se presentarán a los ganadores de cada categoría.'
  }
]

console.log('variable ' + Astro.locals.variable)
---

<Layout title='Sepe Awards' description='TBD' showSocials>
  <div
    class='flex h-4/6 flex-col items-center bg-cotton-candy [clip-path:polygon(0%_0%,0%_83.34%,50%_100%,100%_83.34%,100%_0%)]'
  >
    <h2 class='text-5xl font-black tracking-wide'>SEPE</h2>
    <h1
      class='bg-gradient-to-b from-black bg-clip-text text-[11rem] font-black tracking-wide text-transparent opacity-50 [line-height:1]'
    >
      AWARDS
    </h1>
  </div>
  <Button
    color={Colors.CottonCandy}
    variant='solid'
    size='xl'
    customClasses='mx-auto mt-14 block font-semibold opacity-100 shadow-[-10px_10px_black,-10px_10px_0_2px_rgb(148,189,202)] transition-all hover:-translate-x-5 hover:translate-y-2 hover:shadow-none hover:transition-all'
  >
    Vota aquí
  </Button>

  <SectionContainer className=' mt-44' id='2'>
    <Jumbotron bgImage={bgSepe1} extraClasses='justify-center pl-20'>
      <div class='w-2/5 text-2xl leading-7'>
        <p class='mb-2 text-4xl'>
          ¡Bienvenido/a a los <span class='font-bold text-carnation-300'
            >Zelings Awards</span
          >!
        </p>
        Únete al evento exclusivo del mejor chat de Twitch, donde tú tienes el poder
        de elegir y celebrar los momentos más memorables del año que nos hicieron
        reír, llorar y morir del cringe.
      </div>
    </Jumbotron>
  </SectionContainer>
  <SectionContainer id='3'>
    <Jumbotron bgImage={bgSepe2} extraClasses='text-right pr-20 justify-center'>
      <h3 class='text-6xl font-bold text-cotton-candy'>Funcionamiento</h3>
      <div>
        <div class='inline-block w-1/2'></div>
        <div class='inline-block w-1/2 text-2xl leading-7'>
          <LinkedList items={items} />
        </div>
      </div>
    </Jumbotron>
  </SectionContainer>

  <!-- Categories -->
  <SectionContainer className='px-16 pb-24 pt-44' id='4'>
    <div class='flex gap-10'>
      {
        categories.map((_cat) => (
          <div class='grow'>
            <Card body='hello world' href='/' title='XD' />
          </div>
        ))
      }
    </div>
  </SectionContainer>
</Layout>
